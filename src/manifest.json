{
  "manifest_version": 2,
  "name": "Usable Kimai",
  "description": "Make Kimai at least bit usable",
  "version": "0.3.0",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://kimai.garwan.software/*"
      ],
      "js": [
        "utils.js",
        "kimai-integration.js",
        "main.js"
      ],
      "css": [
        "kimai.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
